<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Your fare for the trip is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:id="@+id/textView"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layoutDirection="locale"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:textSize="@android:dimen/notification_large_icon_width"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />


    <TextView
        android:text="Pay using Cash on Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#13b586"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:layout_gravity= "center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="End Journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:background="@drawable/round"
        android:layout_marginTop="23dp"
        android:layout_gravity= "center_horizontal"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Rate the Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/round"
        android:layout_gravity= "center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
